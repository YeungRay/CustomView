<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yl = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baishan.customview.Main2Activity">

    <com.baishan.customview.ColorTrackView
        android:id="@+id/colorTrackView"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        yl:direction="left"
        yl:text="杨磊哈哈哈"
        yl:text_origin_color="#ffff"
        yl:text_change_color="#f000"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:text="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="40dp"
        android:id="@+id/button"
        android:onClick="startLeft" />

    <Button
        android:text="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:id="@+id/button2"
        android:onClick="startRight" />



</RelativeLayout>
